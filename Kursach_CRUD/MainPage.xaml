<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kursach_CRUD.MainPage"
             Title="Главная">

    <VerticalStackLayout 
        Padding="20" 
        Spacing="20"
        VerticalOptions="Center"
        HorizontalOptions="Center">

        <!-- Логотип -->
        <Image Source="technology1.png"
               WidthRequest="250"
               HeightRequest="250"
               HorizontalOptions="Center"/>

        <!-- Кнопки -->
        <Button Text="Добавить комплектующее"
                Clicked="OnAddProductClicked"
                WidthRequest="250"/>
        <Button Text="Список комплектующих"
                Clicked="OnViewProductsClicked"
                WidthRequest="250"/>
    </VerticalStackLayout>

</ContentPage>
