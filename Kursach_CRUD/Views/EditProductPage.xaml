<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kursach_CRUD.Views.EditProductPage"
             Title="Редактировать товар">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Название" />
            <Entry x:Name="NameEntry" Placeholder="Введите название" />

            <Label Text="Категория" />
            <Entry x:Name="CategoryEntry" Placeholder="Введите категорию" />

            <Label Text="Цена" />
            <Entry x:Name="PriceEntry" Placeholder="Введите цену" Keyboard="Numeric" />

            <Label Text="Серийные номера (через запятую)" />
            <Editor x:Name="SerialsEditor" AutoSize="TextChanges" />

            <Button Text="Сохранить изменения" Clicked="OnSaveClicked"
                    BackgroundColor="#4CAF50" TextColor="White" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>